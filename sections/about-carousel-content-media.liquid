                      },
                      {
                        "value": "h3",
                        "label": "H3"
                      }
                    ],
                    "default": "h2"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content",
                    "default": "<p>Content</p>"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link Text",
                    "default": "Link text",
                    "info": "Leave empty if no link is required"
                },
                {
                    "type": "url",
                    "id": "link_url",
                    "label": "Link URL"
                },
                {
                    "type": "richtext",
                    "id": "cta",
                    "label": "CTA Content",
                    "default": "<p>Call-to-action</p>"
                },
                {
                    "type": "image_picker",
                    "id": "image",
