<script
  type="application/json"
  data-section-type="static-article"
  data-section-id="{{ section.id }}">
</script>

{% assign has_share = false %}
{% if section.settings.use_share_buttons %}
  {% assign has_share = true %}
{% endif %}

{%- capture share_buttons -%}
  {% assign social_image = false %}
  {% if article.image %}
    {% assign social_image = article.image | img_url: '1024x' %}
  {% endif %}
  {% assign social_url = shop.url | append: article.url %}
  {%-
    render 'share-buttons',
    snippet_title: 'general.share_buttons.title_short',
    social_image: social_image,
    social_title: article.title,
    social_url: social_url
  -%}
{%- endcapture  -%}

<section class="article--outer">
  <div class="article--container">

    {% comment %} Post Header {% endcomment %}
    <section class="section--article-header wrap--container theme--alt">
    	<div class="wrap--max push--center">
			<div class="section__grid">
				{% comment %} Breadcrumbs {% endcomment %}
				{% render 'breadcrumbs' %}
				{% comment %} Heading {% endcomment %}
				<div class="container--heading">
					<h1 class="article__heading">{{ article.title }}</h1>
				</div>
				{% comment %} Author {% endcomment %}
				<div class="container--author">
					{% render 'article-author', article: article, show_tags: true %}
				</div>
			</div>
      	</div>
    </section>

	{% comment %} Post Content {% endcomment %}
    <section class="section--article-content wrap--container">
    	<div class="wrap--max push--center">
			<div class="section__grid">
				{% comment %} Container [Sidebar] {% endcomment %}
				<div class="container--sidebar">
					{% comment %} Sharing Links {% endcomment %}
					{{- share_buttons -}}
				</div>
				{% comment %} Container [Content] {% endcomment %}
				<div class="container--content">
					{% comment %} Post Content {% endcomment %}
					<div class="section__wrap--content">
						{{ article.content }}
					</div>
					<div class="section__wrap--author">
						{% render 'article-author', article: article, show_tags: true %}
					</div>
				</div>
			</div>
      	</div>
    </section>

	{% comment %} Related Articles {% endcomment %}
    <section class="section--related-articles wrap--container theme--alt">
    	<div class="wrap--max push--center">
		</div>
	</section>


    {% comment %} <div class="article--inner">
      {% if section.settings.show_date or section.settings.show_author %}
        <div class="article--meta">
          {% if section.settings.show_date %}
            <span class="article--meta-item">
              {{ article.published_at | date: format: 'month_day_year' }}
            </span>
          {% endif %}

          {% if section.settings.show_author %}
            <span class="article--meta-item">
              {{ article.author }}
            </span>
          {% endif %}
        </div>
      {% endif %}

      <div class="article--content rte">
        {{ article.content }}
      </div>

      {% if article.tags != blank %}
        <div class="article--tags">
          <span class="article--tags-title">{{- 'blog.article.filed_in' | t -}}</span>
          {% for tag in article.tags %}
            {{ tag | link_to_tag: tag }}{% unless forloop.last %},{% endunless %}
          {% endfor %}
        </div>
      {% endif %}

      {% if has_share %}
        <div class="article--share-buttons">
          {{- share_buttons -}}
        </div>
      {% endif %}

      {% if blog.next_article or blog.previous_article %}
        <div class="article--pagination">
          {% assign current_found = false %}
          {% assign done = false %}
          {% for a in blog.articles %}
            {% if current_found and done == false %}
              {% assign next_article = a %}
              {% assign done = true %}
            {% endif %}

            {% unless done %}
              {% if a.id == article.id %}
                {% assign current_found = true %}
              {% else %}
                {% assign prev_article = a %}
              {% endif %}
            {% endunless %}
          {% endfor %}

          {% if prev_article %}
            <div class="article--pagination-item-left">
              <a href="{{ prev_article.url }}">
                <span class="article--pagination-chevron-left" aria-hidden="true">
                  {% render 'icon-chevron-down-small' %}
                </span>
                <span class="article--pagination-text">
                  {{ 'blog.article.previous_article' | t }}
                  <span class="article--pagination-title">
                    {{ prev_article.title | escape }}
                  </span>
                </span>
              </a>
            </div>
          {% endif %}

          {% if next_article %}
            <div class="article--pagination-item-right">
              <a href="{{ next_article.url }}">
                <span class="article--pagination-text">
                  {{ 'blog.article.next_article' | t }}
                  <span class="article--pagination-title">
                    {{ next_article.title | escape }}
                  </span>
                </span>
                <span class="article--pagination-chevron-right" aria-hidden="true">
                  {% render 'icon-chevron-down-small' %}
                </span>
              </a>
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% render 'article-comments', comment: comment %}
    </div> {% endcomment %}

  </div>
</section>

{% schema %}
{
  "name": "t:sections.article_pages.name",
  "class": "article--section section--canonical",
  "settings": [
    {
      "id": "featured_image_width",
      "type": "select",
      "label": "t:sections.article_pages.featured_image_width.label",
      "options": [
        {
          "value": "content-width",
          "label": "t:sections.article_pages.featured_image_width.option_1"
        },
        {
          "value": "full-width",
          "label": "t:sections.article_pages.featured_image_width.option_2"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "t:sections.article_pages.show_date.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "t:sections.article_pages.show_author.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_share_buttons",
      "label": "t:sections.article_pages.use_share_buttons.label",
      "default": true
    }
  ]
}
{% endschema %}