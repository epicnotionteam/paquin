{% comment %}
// Output Carousel [Content/Media, Divisions]
// Built specifically for About template
{% endcomment %}

{% comment %} Assign section data to vars {% endcomment %}
{% assign section_id            = section.id %}
{% assign section_heading_small = section.settings.heading_small %}
{% assign section_blocks        = section.blocks %}
{% assign section_theme         = section.settings.theme %}

{% comment %} Output section {% endcomment %}
<section class="section--carousel-content-media theme--{{ section_theme }} wrap--container">
    <div class="section__grid wrap--max push--center">
        {% comment %} Heading [Small] {% endcomment %}
        {% if section_heading_small != blank %}
            <div class="container--heading-small section__primary-heading">
                <h2 class="section__heading--small">{{ section_heading_small }}</h2>
            </div>
        {% endif %}
        
        {% comment %} Tab Navigation {% endcomment %}
        <div class="container--tab-navigation">
            <ul class="tab-navigation" data-glide-el="controls[nav]">
                {% for block in section_blocks %}
                    <li>
                        <button data-glide-dir="={{ forloop.index0 }}" class="tab-navigation__item{% if forloop.first %} active{% endif %}">
                            {{ block.settings.heading_small }}
                        </button>
                    </li>
                {% endfor %}
            </ul>
        </div>
        
        {% comment %} Carousel {% endcomment %}
        <div class="container--carousel">
            <div class="glide carousel--content-media" data-carousel="{{ section.id }}">
                <div data-glide-el="track" class="glide__track">
                    <ul class="glide__slides">
                        {% assign block_count = section_blocks.size %}
                        {% for block in section_blocks %}
                            {% comment %} Assign block data to vars {% endcomment %}
                            {% assign block_logo         = block.settings.logo %}
                            {% assign block_subheading   = block.settings.subheading %}
                            {% assign block_heading      = block.settings.heading %}
                            {% assign block_heading_size = block.settings.heading_size %}
                            {% assign block_content      = block.settings.content %}
                            {% assign block_link_text    = block.settings.link_text %}
                            {% assign block_link_url     = block.settings.link_url %}
                            {% assign block_cta          = block.settings.cta %}
                            {% assign block_image        = block.settings.image %}
                            {% comment %} Output item {% endcomment %}
                            <li class="glide__slide item">
                                <div class="item__grid">
                                    {% comment %} Container [Content] {% endcomment %}
                                    <div class="container--content">
                                        {% comment %} Wrap [Content] {% endcomment %}
                                        <div class="item__wrap--content">
                                            {% comment %} Logo {% endcomment %}
                                            {% if block_logo != blank %}
                                                <img class="item__logo" src="{{ block_logo | img_url: '800x' }}" alt="">
                                            {% endif %}
                                            {% comment %} Subeading {% endcomment %}
                                            {% if block_subheading != blank %}
                                                <p class="item__subheading">{{ block_subheading }}</p>
                                            {% endif %}
                                            {% comment %} Heading {% endcomment %}
                                            {% if block_heading != blank %}
                                                <h3 class="item__heading {{ block_heading_size }}">{{ block_heading }}</h3>
                                            {% endif %}
                                            {% comment %} Content {% endcomment %}
                                            {% if block_content != blank %}
                                                <div class="item__content">{{ block_content | richtext }}</div>
                                            {% endif %}
                                            {% comment %} Link {% endcomment %}
                                            {% if block_link_text != blank and block_link_url != blank %}
                                                <a href="{{ block_link_url }}" class="item__link link--icon-after link--icon-arrow-forward">{{ block_link_text }}</a>
                                            {% endif %}
                                        </div>
                                        {% comment %} Wrap [Actions] {% endcomment %}
                                        <div class="item__wrap--actions">
                                            {% comment %} CTA {% endcomment %}
                                            {% if block_cta != blank %}
                                                <div class="item__cta">{{ block_cta | richtext }}</div>
                                            {% endif %}
                                            {% comment %} Navigation {% endcomment %}
                                            <div class="item__navigation">
                                                <span class="item__count">{{ forloop.index }} / {{ block_count }}</span>
                                                <div data-glide-el="controls">
                                                    <button class="trigger--next" data-glide-dir=">"></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% comment %} Container [Media] {% endcomment %}
                                    <div class="container--media">
                                        {% if block_image != blank %}
                                            <img class="item__image" src="{{ block_image | img_url: '800x' }}" alt="{{ block_heading }}">
                                        {% endif %}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

{% comment %} Carousel initialization {% endcomment %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Check if jQuery and Glide are available
        if (typeof jQuery === 'undefined' || typeof jQuery.fn.glide === 'undefined') {
            console.error('jQuery or Glide.js is not loaded. Please make sure both are included before this script.');
            return;
        }
    
        // Initialize each carousel
        $('.section--carousel-content-media').each(function(index) {
            var $container = $(this);
            var $glideElement = $container.find('.glide');
    
            // Initialize the slider
            $glideElement.glide({
                type: 'carousel',
                perView: 1,
                animationDuration: 800,
                gap: 40,
                startAt: 0,
                autoplay: false,
                arrows: 'none',
                navigation: 'none'
            });
    
            // Get an instance of the Glide API
            var glide = $glideElement.glide().data('api_glide');
    
            // Handle tab navigation
            $container.find('.tab-navigation__item').each(function(tabIndex) {
                $(this).on('click', function() {
                    console.log(`Tab ${tabIndex} Clicked`);
                    glide.go(`=${tabIndex}`);
                });
            });
    
            // Handle next button
            $container.find('.trigger--next').on('click', function() {
                console.log('Next Button Clicked');
                glide.go('>');
            });
    
            // Update active tab and slide count
            glide.on('move', function() {
                updateActiveTab();
                updateSlideCount();
            });
    
            function updateActiveTab() {
                var activeIndex = glide.index;
                $container.find('.tab-navigation__item').removeClass('active')
                    .eq(activeIndex).addClass('active');
                console.log(`Active tab updated to index: ${activeIndex}`);
            }
    
            function updateSlideCount() {
                var $countElement = $container.find('.item__count');
                if ($countElement.length) {
                    var currentIndex = glide.index + 1;
                    var totalSlides = glide.settings.slides.length;
                    $countElement.text(`${currentIndex} / ${totalSlides}`);
                    console.log(`Slide count updated: ${currentIndex} / ${totalSlides}`);
                }
            }
    
            // Initial updates
            updateActiveTab();
            updateSlideCount();
    
            console.log(`Carousel ${index} initialized successfully`);
        });
    });
</script>

