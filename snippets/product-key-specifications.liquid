{% comment %}
// Output key specifications for the current product
{% endcomment %}


{% if product.metafields.custom.key_specifications %}
	<!-- Assign component data to vars -->
	{% assign data_source_1 = product.metafields.custom.key_specifications %}
	{% assign data_source_2 = product.metafields.custom.key_specifications.value %}
	{% if data_source_1 %}
		Data Source 1
	{% endif %}
	{% if data_source_2 %}
		Data Source 2
	{% endif %}
	<!-- Output component -->
	<h2>Key Product Specifications</h2>
	{{ data_source }}
	<div class="feed--table-simple">
	  	{% for item in data_source %}
			<pre>Found items</pre>
			{% if item.weight %}
			<div class="item">
				<pre>Found item [Weight]</pre>
				<p class="item__heading">Weight</p>
				<div class="item__content">{{ item.weight }}</div>
			</div>
			{% endif %}
	  	{% endfor %}
	</div>
{% endif %}