{% comment %} Output component {% endcomment %}
<div class="feed--collection variant--subcollection">
    {% for subcollection in data_subcollections %}
        <div class="item">
            IMAGE: {{ subcollection.image }}
            <h3 class="item__title">
                <a href="/collections/{{ subcollection.handle }}">{{ subcollection.title }}</a>
            </h3>
        </div>
    {% endfor %}
</div>

<div class="feed--collection variant--subcollection">
    {% for subcollection_reference in data_subcollections %}
        {% assign subcollection = collections[subcollection_reference.handle] %}
        <div class="item">
            {% if subcollection.image %}
                <a class="item__wrap--image" href="{{ subcollection.url }}">
                    <img class="item__image" src="{{ subcollection.image | img_url: '512x' }}" alt="{{ subcollection.title }}">
                </a>
            {% endif %}
            <h3 class="item__title">
                <a href="{{ subcollection.url }}">{{ subcollection.title }}</a>
            </h3>
        </div>
    {% endfor %}
</div>


  