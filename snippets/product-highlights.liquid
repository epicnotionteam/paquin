{% comment %}
// Output highlight feed for the current product
{% endcomment %}


{%- if product.metafields.custom.highlights -%}
	<div id="product__highlights">
    	<h2>Product Highlights</h2>
    	<ul class="list--check">
			{% assign highlights = product.metafields.custom.highlights | parse_json %}
			{% for item in highlights %}
				<li>{{ item }}</li>
			{% endfor %}
    	</ul>
  	</div>
{%- endif -%}