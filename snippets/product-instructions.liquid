{% comment %}
// Output instruction feed for the current product
{% endcomment %}


{% if product.metafields.custom.instructions %}
	{% assign data_source = product.metafields.custom.instructions.value %}
	<div id="product__instructions">
		<h2>Product Instructions</h2>
		<ul class="list--link-arrow">
			{% for item in data_source %}
		  		<li>
					<a href="{{ item.url.value }}" title="{{ item.title | escape }}">{{ item.title | escape }}</a>
				</li>
			{% endfor %}
	  	</ul>
	</div>
{% endif %}