{
    "name": "Carousel [Content/Media]",
    "settings": [
        {
            "type": "text",
            "id": "heading_small",
            "label": "Heading [Small]",
            "default": "Heading",
            "info": "Primary section heading (h2)"
        },
        {
            "type": "select",
            "id": "theme",
            "label": "Section Theme",
            "options": [
