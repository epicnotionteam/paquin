{% comment %}
// Output Hero [Inline] component
{% endcomment %}

{% comment %} Assign section data to vars {% endcomment %}
{% assign section_heading            = section.settings.heading %}
{% assign section_content            = section.settings.content %}
{% assign section_cta_primary_text   = section.settings.cta_primary_text %}
{% assign section_cta_primary_url    = section.settings.cta_primary_url %}
{% assign section_cta_secondary_text = section.settings.cta_secondary_text %}
{% assign section_cta_secondary_url  = section.settings.cta_secondary_url %}

{% comment %} Output section {% endcomment %}
<section class="section--hero-inline wrap--container heme--dark" style="background-image: url('{{ section.settings.image | img_url: '1024x' }}');">
    {% comment %} Content {% endcomment %}
    <div class="container--content">
        {% comment %} Heading {% endcomment %}
        {% if section_heading != blank %}
            <h2 class="section__heading">{{ section_heading }}</h2>
        {% endif %}
        {% comment %} Content {% endcomment %}
        {% if section_content != blank %}
            <div class="section__content">{{ section_content | richtext }}</div>
        {% endif %}
        {% comment %} CTA [Primary] {% endcomment %}
        {% if section_cta_primary_text != blank and section_cta_primary_url != blank %}
            <a href="{{ section_cta_primary_url }}" class="button--base">{{ section_cta_primary_text }}</a>
        {% endif %}
        {% comment %} CTA [Secondary] {% endcomment %}
        {% if section_cta_secondary_text != blank and section_cta_secondary_url != blank %}
            <a href="{{ section_cta_secondary_url }}" class="button--outline">{{ section_cta_secondary_text }}</a>
        {% endif %}
    </div>
</section>

{% schema %}
{
    "name": "Hero [Inline]",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Section heading"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>Content</p>"
        },
        {
            "type": "text",
            "id": "cta_primary_text",
            "label": "Primary CTA Text",
            "default": "CTA text",
            "info": "Leave empty if no link is required"
        },
        {
            "type": "url",
            "id": "cta_primary_url",
            "label": "Primary CTA URL"
        },
        {
            "type": "text",
            "id": "cta_secondary_text",
            "label": "Secondary CTA Text",
            "default": "CTA text",
            "info": "Leave empty if no link is required"
        },
        {
            "type": "url",
            "id": "cta_secondary_url",
            "label": "Secondary CTA URL"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        }
    ],
    "presets": [
        {
            "name": "Hero [Inline]",
            "category": "Paquin"
        }
    ]
}
{% endschema %}